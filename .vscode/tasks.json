{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure relief (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build relief_app",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j",
                "$(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Configure relief (Debug)",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
